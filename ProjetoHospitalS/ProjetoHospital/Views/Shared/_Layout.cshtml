<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjetoHospital</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ProjetoHospital</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav">
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" href="#" data-toggle="dropdown" style="text-align:center">Cadastros</a>
                            <ul class="dropdown-menu">
                                <li><a asp-area="" asp-controller="Atendimentoes" asp-action="Index">Atendimento</a></li>
                                <li><a asp-area="" asp-controller="Consultas" asp-action="Index">Consulta</a></li>
                                <li><a asp-area="" asp-controller="Convenios" asp-action="Index">Convenio</a></li>
                                <li><a asp-area="" asp-controller="DiaSemanas" asp-action="Index">Dia da Semana</a></li>
                                <li><a asp-area="" asp-controller="Enderecoes" asp-action="Index">Endereço</a></li>
                                <li><a asp-area="" asp-controller="Especialidades" asp-action="Index">Especialidade</a></li>
                                <li><a asp-area="" asp-controller="Estadoes" asp-action="Index">Estado</a></li>
                                <li><a asp-area="" asp-controller="Exames" asp-action="Index">Exame</a></li>
                                <li><a asp-area="" asp-controller="ExamePlanoes" asp-action="Index">Exame Plano</a></li>
                                <li><a asp-area="" asp-controller="Medicos" asp-action="Index">Médico</a></li>
                                <li><a asp-area="" asp-controller="Pacientes" asp-action="Index">Paciente</a></li>
                                <li><a asp-area="" asp-controller="Planoes" asp-action="Index">Plano</a></li>
                                <li><a asp-area="" asp-controller="PrescricaoMedicamentoes" asp-action="Index">Prescricão de medicamento</a></li>
                                <li><a asp-area="" asp-controller="RequisicaoExames" asp-action="Index">Requisição de exame</a></li>
                            </ul>
                        </li>
                        <li><a asp-area="" asp-controller="Home" asp-action="About" style="text-align:center">About</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Contact" style="text-align:center">Contact</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - ProjetoHospital - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
